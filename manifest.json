{

  "description": "Sove terminal game",
  "manifest_version": 2,
  "name": "terminal-solver",
  "version": "1.0",
  "icons": {
    "48": "icons/term-48.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "https://app.0xterminal.game/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  },
  "browser_action": {
    "default_icon": "icons/term-32.png",
    "default_title": "Solver",
    "default_popup": "popup/reload.html"
  }
}
